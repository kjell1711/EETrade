{
  "app": {
    "name": "EETrade Auktionsportal",
    "defaultLocale": "de-DE",
    "currency": "EUR"
  },
  "theme": {
    "accentColor": "#ff2d55",
    "baseMode": "dark",
    "style": "ios-modern"
  },
  "pricing": {
    "minStartPrice": 1000,
    "maxStartPrice": 10000000,
    "defaultBidSteps": [1000, 10000, 100000]
  },
  "session": {
    "ttlMinutes": 720
  },
  "oauth": {
    "providerName": "Roklus OAuth",
    "authorizeUrl": "https://auth.example.com/oauth/authorize",
    "tokenExchangeEndpoint": "",
    "clientId": "YOUR_CLIENT_ID",
    "clientSecret": "YOUR_CLIENT_SECRET",
    "redirectUri": "http://localhost:8080/",
    "scope": "openid profile email",
    "responseType": "code",
    "usePkce": true
  },
  "admin": {
    "adminUsernames": ["admin"],
    "allowUserBan": true,
    "allowAuctionDelete": true
  },
  "features": {
    "showPriceStats": true,
    "allowCustomBidIncrement": true
  }
}
